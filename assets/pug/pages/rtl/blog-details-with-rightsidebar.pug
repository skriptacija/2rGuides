- var inner = "index.html"
- var src = "color-1.css"
doctype html
html(lang='en', dir='rtl')
    head
      include ../../_assets/rtl/includes/header
    body.blog-page.blog-detail.light-footer.rtl
      include ../../_assets/rtl/components/loader
      include ../../_assets/rtl/includes/nav
      div.page-margin
          // breadcrumb start
          .breadcrumb-bg
            .container
              .row
                .col-md-5.col-sm-12.col-text-center.d-align-center
                  h2.title
                    | حق
                    span  الشريط الجانبي
                .col-md-7.col-sm-12.col-text-center
                  nav.blog-bradcrumb(aria-label='breadcrumb')
                    ol.breadcrumb.bg-transparent.mb-0
                      li.breadcrumb-item
                        a(href='index.html') حول
                      li.breadcrumb-item
                        a(href='blog.html') مدونة
                      li.breadcrumb-item.active
                        a(href='#') تفاصيل المدونة مع الشريط الجانبي الأيمن
          // breadcrumb end

      // blog Section starts
      section
        .container
          .row
            // blog details starts
            .col-sm-12.col-md-8.col-lg-9
                include ../../_assets/rtl/blog/blog-details
            // sidebar starts
            .col-md-4.col-lg-3.order-md-last.list-sidebar
                include ../../_assets/rtl/blog/blog-sidebar
            // sidebar end
            // blog details end

      // blog Section End
      include ../../_assets/rtl/includes/footer
      include ../../_assets/rtl/includes/footer-files
