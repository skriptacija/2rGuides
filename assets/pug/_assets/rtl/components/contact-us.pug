// Contact Section start
section#contact.contact
  .contact-decor
    .contact-circle1
      img(src='../assets/images/main-banner12.png', alt='')
    .contact-circle2
      img(src='../assets/images/main-banner1.png', alt='')
  .container
    .row
      .col-md-12.col-lg-8.col-sm-12
        .contact-us
          .w-100
            h2.title
              span  جهة الاتصال 
              |  المعلومات
            form#myform.theme-form(action='mailer.php', method='post')
              .form-group
                .row
                  #mail_alert_class.alert.alert-success.alert-dismissible.d-none
                    a.close(href='#', data-dismiss='alert', aria-label='close') ×
                    #alert_mail
                .row
                  .col-sm-12.col-md-6.md-fgrup-margin
                    input#fullname.form-control(type='text', name='fullname', placeholder='اسمك', required='required')
                  .col-sm-12.col-md-6
                    input#phone.form-control(type='number', name='phone', placeholder='هاتف', required='required')
              .form-group
                input#email.form-control(type='email', name='email', placeholder='عنوان البريد الإلكتروني', required='required')
              .form-group
                textarea#message.form-control(name='message', rows='4', placeholder='رسالة', required='required')
              .form-button
                input#emailsend.btn.btn-custom.theme-color(type='submit', name='send', value='إرسال')
      .col-lg-4.d-medium-none-lg
        .contact-right
          img.img-fluid(src='../assets/images/Contact-info.png', alt='')
// Contact Section End
